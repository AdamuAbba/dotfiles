{
  "$schema": "https://ale.sh/karabiner-jsonschema.json",
  "title": "Script Launchers [external and built-in keyboards]",
  "rules": [
    {
      "description": "[Script runner] Hyper + s + <key_code>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "s_held",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "s_held",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "s"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "s_held",
              "value": 1
            }
          ],
          "to": [
            {
              "shell_command": "sh -c \"/opt/homebrew/bin/aerospace reload-config && /opt/homebrew/bin/sketchybar --trigger user_notification LABEL=\\\"aerospace reloaded\\\"\""
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "s_held",
              "value": 1
            }
          ],
          "to": [
            {
              "shell_command": "sh -c \"/opt/homebrew/bin/sketchybar --reload && /opt/homebrew/bin/sketchybar --trigger user_notification LABEL=\\\"sketchybar reloaded\\\"\""
            }
          ]
        }
      ]
    }
  ]
}

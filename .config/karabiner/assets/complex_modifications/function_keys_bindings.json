{
  "$schema": "https://ale.sh/karabiner-jsonschema.json",
  "title": "function key bindings [external and built-in keyboards]",
  "rules": [
    {
      "description": "[function key bindings] Hyper + {v|b} + <key_code>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "v_held",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "v_held",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "v"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "b_held",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "b_held",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "b"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "b_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "b_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "v_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "rewind"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "v_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "fastforward"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "v_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "v_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "v_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "volume_increment"
            }
          ]
        }
      ]
    }
  ]
}
